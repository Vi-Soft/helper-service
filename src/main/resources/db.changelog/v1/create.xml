<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="vi-soft">
        <createTable tableName="users">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="users_pkey"
                             nullable="false"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">F
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="users_user_role_user_id_fk"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="role" type="varchar(255)"/>
        </createTable>

        <createTable tableName="token">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="token_pkey"
                             nullable="false"/>
            </column>
            <column name="token" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="expiration" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="users_token_user_id_fk"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

        <createTable tableName="application">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="application_pkey"
                             nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="folder">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="folder_pkey"
                             nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="order_number" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="bigint">
                <constraints nullable="true"
                             foreignKeyName="folder_folder_parent_id_fk"
                             referencedTableName="folder"
                             referencedColumnNames="id"
                             deleteCascade="true"/>
            </column>
            <column name="application_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="application_folder_application_id_fk"
                             referencedTableName="application"
                             referencedColumnNames="id"
                             deleteCascade="true"/>
            </column>
        </createTable>

        <createTable tableName="file">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="file_pkey"
                             nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="path" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="order_number" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="folder_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="folder_file_folder_id_fk"
                             referencedTableName="folder"
                             referencedColumnNames="id"
                             deleteCascade="true"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>