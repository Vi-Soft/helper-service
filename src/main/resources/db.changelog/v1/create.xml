<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="vi-soft">
        <createTable tableName="users">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="users_pkey"
                             nullable="false"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">F
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="users_user_role_user_id_fk"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="role" type="varchar(255)"/>
        </createTable>

        <createTable tableName="token">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="token_pkey"
                             nullable="false"/>
            </column>
            <column name="token" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="expiration" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="users_token_user_id_fk"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

        <loadData tableName="users" file="classpath:db.changelog/population/users.csv"/>
        <loadData tableName="user_role" file="classpath:db.changelog/population/user_role.csv"/>

    </changeSet>
</databaseChangeLog>